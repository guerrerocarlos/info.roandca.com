    // Example: track analytics
    // if (typeof gtag !== 'undefined') {
    //   gtag('event', 'add_to_contacts', { link: url });
    // }
  }
</script>

<style>
  .add-to-contacts {
    padding: 0.75rem;
    display: flex;
    border: 7px solid var(--zinc-800);
    border-radius: 1rem;
    text-decoration: none;
    background-color: #000000;
    margin-bottom: 2em;
  }

  .link-icon {
    width: 3rem;
    height: 3rem;
    margin-right: 1.125rem;
    background: var(--zinc-900);
    border-radius: 0.5rem;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .link-icon i {
    font-size: 1.5rem;
    color: var(--zinc-50);
  }

  .link-title {
    font-weight: bold;
    font-size: 1.2rem;
  }
  .link-description {
    font-size: 1rem;
  }

  .link-title {
    color: var(--iphone-blue);
    font-weight: normal;
  }

  .link-description {
    color: var(--zinc-400);
    margin-top: 0.125rem;
  }
</style>
